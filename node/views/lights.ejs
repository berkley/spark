<!DOCTYPE html>
<html>
<head>
	<title>El Casa Poder 2000</title>
	<link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
	<link rel="apple-touch-icon" href="./freddy.png" />
	<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
	<script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
	<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
	<script src="spectrum.js" type="text/javascript"></script>
	<link rel="stylesheet" href="spectrum.css" type="text/css"/>
	<meta name="viewport" content="width=250" />
	
	<style>
		body 
		{
			background-color: grey;
			margin: 0 auto;
			float: none;
		}
		img.centered
		{
			display: block;
		    margin-left: auto;
		    margin-right: auto
		}
		.neopixel
		{
			display: inline-block;
			border: 1px solid;
			width: 200px;
			height: 300px;

		}
		.horizontal-wrapper
		{
			width: 100%;
			border: 1px solid;
		}
		.box-desc
		{
			text-align: center;
			padding: 5px;
		}
		.vert-range
		{
			border: 1px solid;
			display: inline;
		}
		.center 
		{
		    margin: auto;
		}
    </style>
    <script>
    $( document ).ready(function() {
        hideAll();
        // setCurrentState();
    });
 
    $( window ).load(function() {
    });

    $(function() {
	    $( ".slider-vertical" ).slider({
	      orientation: "vertical",
	      range: "min",
	      min: 0,
	      max: 255,
	      value: 0,
	      change: function( event, ui ) {
	      	console.log("val of ", this.id + ": ", $("#" + this.id).slider("value"));
	        // $( "#amount" ).val( $("#" + this.id).slider("value") );
	      }
	    });
	  });
    </script>
</head>
<body>
	<div id="header" style="border:0px solid black; padding:5px; margin:5px">
	<h3 style="text-align:center">El Casa Poder 2000</h3>
	</div>
	<div class="horizontal-wrapper">
	<% for(var i=0; i<cores.length; i++) {
		if(cores[i].lightDisplay == true) {%>
		<div class="neopixel">
			<input type="hidden" name="coreId" value="<%= cores[i].id %>"/>
			<div class="box-desc"><%= cores[i].description %></div>
			<div class="center">
				<div class="slider-vertical center" style="padding-top:10px; padding-bottom:10px" id="slider-vertical-<%= i %>" style="height:200px;"></div>
			</div>

			<div id="programDiv" style="padding:5px; margin:15px">
			Program:
			<select id="actionSelect-<%= i %>" name="action">
				<option value="allOff">All Pixels Off</option>
				<option value="stop">Stop Program</option>
				<option value="setAll">Single Color</option>
				<option value="alternate">Alternate Colors</option>
				<option value="loopAlternate">Animate Alternate Colors</option>
				<option value="rainbow">Rainbow</option>
				<option value="blocks">Blocks</option>
				<option value="loopBlocks">Animate Blocks</option>
				<option value="fadeColor">Fade Between 2 Colors</option>
				<option value="particles">Particles</option>
				<option value="endrun">End Run</option>
				<option value="snow">Snow</option>
				<option value="usa">USA</option>
				<option value="lightning">lightning</option>
				<option value="skull">Skull</option>
				<option value="skullnolightning">Skull - No lightning</option>
			</select><br/>

			<span id="colorSelector1-<%= i %>">
				Red1: <br/>
				<input type="range"  min="0" max="255" name="r1" id="r1-<%= i %>" value="0"/>
				<br/>
				Green1: <br/>
				<input type="range"  min="0" max="255" name="g1" id="g1-<%= i %>" value="0"/>
				<br/>
				Blue1: <br/>
				<input type="range"  min="0" max="255" name="b1" id="b1-<%= i %>" value="0"/>
				<br/>
				<input id='colorpicker1' />
				<br/>
			</span>


			<span id="colorSelector2-<%= i %>">
				Red2: <br/>
				<input type="range"  min="0" max="255" name="r2" id="r2-<%= i %>" value="0"/>
				<br/>
				Green2: <br/>
				<input type="range"  min="0" max="255" name="g2" id="g2-<%= i %>" value="0"/>
				<br/>
				Blue2: <br/>
				<input type="range"  min="0" max="255" name="b2" id="b2-<%= i %>" value="0"/>
				<br/>
				<input id='colorpicker2-<%= i %>' />
			</span>

			<div id="delayDiv-<%= i %>">delay:<input id="delay-<%= i %>" name="delay" value="50"/></div>
			<div id="durationDiv-<%= i %>">duration:<input id="duration-<%= i %>" name="duration" value="5000"/></div>
			<div id="blockSizeDiv-<%= i %>">block size:<input id="blockSize-<%= i %>" name="blockSize" value="5"/></div>
			<div id="numParticlesDiv-<%= i %>">number of particles:<input id="numParticles-<%= i %>" name="numParticles" value="10"/></div>
			<div id="maxVelocityDiv-<%= i %>">max particle velocity:<input id="maxVelocity-<%= i %>" name="maxVelocity" value="1"/></div>
			<div id="threedDiv-<%= i %>">3D:<input id="threed-<%= i %>" name="threed" type="checkbox"/></div>
			<div id="respawnDiv-<%= i %>">respawn:<input id="respawn-<%= i %>" name="respawn" type="checkbox"/></div>
			<div id="flickerDiv-<%= i %>">flicker:<input id="flicker-<%= i %>" name="flicker" type="checkbox"/></div>
			<br/>
			<button id="goButton-<%= i %>">Light It Up</button>
			<button id="stopButton-<%= i %>">Shut it down</button>
			<br/>
			<br/>

			<div id="status-<%= i %>"></div>
			<div id="result-<%= i %>"></div>
			<img style="width:30px;" id="spinner-<%= i %>" width="100" src="spinner.gif">
		</div>
		</div>
	<% }} %>
	</div>

	<script>
		var paramState = null;

		var createColorPicker = function(id, color, rid, gid, bid) {
			$(id).spectrum({
			color: color,
			preferredFormat: "rgb",
		    move: function(tinycolor) { },
		    show: function(tinycolor) { },
		    hide: function(tinycolor) { },
		    beforeShow: function(tinycolor) { },
		    change: function(color) {
		    	$(rid).val(color.toRgb().r);
		    	$(gid).val(color.toRgb().g);
		    	$(bid).val(color.toRgb().b);
		    }
			});
		};

		createColorPicker("#colorpicker1", "F00", "#r1", "#g1", "#b1");
		createColorPicker("#colorpicker2", "F00", "#r2", "#g2", "#b2");

		var button = document.querySelector("#goButton");
		var stopButton = document.querySelector("#stopButton");
		var select = document.querySelector("select");

		var calcColor = function(r, g, b) {
			var rstr = r.toString(16);
			var gstr = g.toString(16);
			var bstr = b.toString(16);
			if(rstr == '0') {rstr = '00'}
			if(gstr == '0') {gstr = '00'}
			if(bstr == '0') {bstr = '00'}
			var col = "#" + rstr + gstr + bstr;
			// alert('col: ' + col);
			return col;
		};

		$("#r1").change(function(ev){
			var rint = parseInt($('#r1').val());
			var gint = parseInt($('#g1').val());
			var bint = parseInt($('#b1').val());
			var col = calcColor(rint, gint, bint);
			createColorPicker("#colorpicker1", col, "#r1", "#g1", "#b1");
		});

		$("#g1").change(function(ev){
			var rint = parseInt($('#r1').val());
			var gint = parseInt($('#g1').val());
			var bint = parseInt($('#b1').val());
			var col = calcColor(rint, gint, bint);
			createColorPicker("#colorpicker1", col, "#r1", "#g1", "#b1");
		});

		$("#b1").change(function(ev){
			var rint = parseInt($('#r1').val());
			var gint = parseInt($('#g1').val());
			var bint = parseInt($('#b1').val());
			var col = calcColor(rint, gint, bint);
			createColorPicker("#colorpicker1", col, "#r1", "#g1", "#b1");
		});

		$("#r2").change(function(ev){
			var rint = parseInt($('#r2').val());
			var gint = parseInt($('#g2').val());
			var bint = parseInt($('#b2').val());
			var col = calcColor(rint, gint, bint);
			createColorPicker("#colorpicker2", col, "#r2", "#g2", "#b2");
		});

		$("#g2").change(function(ev){
			var rint = parseInt($('#r2').val());
			var gint = parseInt($('#g2').val());
			var bint = parseInt($('#b2').val());
			var col = calcColor(rint, gint, bint);
			createColorPicker("#colorpicker2", col, "#r2", "#g2", "#b2");
		});

		$("#b2").change(function(ev){
			var rint = parseInt($('#r2').val());
			var gint = parseInt($('#g2').val());
			var bint = parseInt($('#b2').val());
			var col = calcColor(rint, gint, bint);
			createColorPicker("#colorpicker2", col, "#r2", "#g2", "#b2");
		});

		$("#brightness").change(function(ev){
			console.log("Brightness changed to ", $("#brightness").val());
			$('#spinner').show();
	    	$('#status').html("");
	    	$('#result').html("");
		    $.get("/house/run/action", 
		    	{"action":"setBrightness", coreId:$('#coreIdSelect').val(), brightness:$('#brightness').val()}, 
		    	function(data) {
		      $('#status').html("<h3>Request Complete.  Spark said:</h3>");
			  $('#result').html( data );
			  $('#spinner').hide();
			});
		});

		var hideAll = function() {
			<% for(var i=0; i<cores.length; i++) {
				if(cores[i].lightDisplay == true) {%>
					$('#colorSelector1-<%=i%>').hide();
					$('#colorSelector2-<%=i%>').hide();
					$('#delayDiv-<%=i%>').hide();
					$('#durationDiv-<%=i%>').hide();
					$('#blockSizeDiv-<%=i%>').hide();
					$('#numParticlesDiv-<%=i%>').hide();
					$('#maxVelocityDiv-<%=i%>').hide();
					$('#threedDiv-<%=i%>').hide();
					$('#respawnDiv-<%=i%>').hide();
					$('#flickerDiv-<%=i%>').hide();
					$('#spinner-<%=i%>').hide();
				<%}%>
			<%}%>
		};

		$("#coreIdSelect").change(function(ev) {
			setCurrentState();
		});

		var setCurrentState = function() {
			//get the current param list from the core
			//populate the controls with the state data
			var coreId = $('#coreIdSelect').val();
			if(coreId == "all")
			{
				coreId = $('#defaultCoreId').val();
			}

			$.get("/house/params/" + coreId, function(data) {
				var paramStr = jQuery.parseJSON(data).result;
				var params = paramStr.split(',');
				console.log("params: ", params);
				paramState = params;

				document.getElementById("actionSelect").value = params[0];
				var event = jQuery.Event("change");
				$('#actionSelect').trigger("change");
			});
		};

		var getParamsFromCore = function() {
			$('#spinner').show();
			$.get("/house/run/action", 
		    	{"action":verb, coreId:$('#coreIdSelect').val(), r1:$('#r1').val(), g1:$('#g1').val(), b1:$('#b1').val(), r2:$('#r2').val(), g2:$('#g2').val(), b2:$('#b2').val(), delay:$('#delay').val(), blockSize:$('#blockSize').val(), duration:$('#duration').val(), maxVelocity:$('#maxVelocity').val(), numParticles:$('#numParticles').val(), respawn:$('#respawn').prop('checked'), flicker:$('#flicker').prop('checked'), threed:$('#threed').prop('checked')}, 
		    	function(data) {
		      $('#status').html("<h3>Request Complete.  Spark said:</h3>");
			  $('#result').html( data );
			  $('#spinner').hide();
			});
		};

		var runQuery = function(verb) {
	    	$('#spinner').show();
	    	$('#status').html("");
	    	$('#result').html("");
		    $.get("/house/run/action", 
		    	{"action":verb, coreId:$('#coreIdSelect').val(), r1:$('#r1').val(), g1:$('#g1').val(), b1:$('#b1').val(), r2:$('#r2').val(), g2:$('#g2').val(), b2:$('#b2').val(), delay:$('#delay').val(), blockSize:$('#blockSize').val(), duration:$('#duration').val(), maxVelocity:$('#maxVelocity').val(), numParticles:$('#numParticles').val(), respawn:$('#respawn').prop('checked'), flicker:$('#flicker').prop('checked'), threed:$('#threed').prop('checked')}, 
		    	function(data) {
		      $('#status').html("<h3>Request Complete.  Spark said:</h3>");
			  $('#result').html( data );
			  $('#spinner').hide();
			});
	    };

	    <% for(var i=0; i<cores.length; i++) {
			if(cores[i].lightDisplay == true) {%>
				$('#actionSelect-<%=i%>').change(function(ev) {
					actionSelectChange(ev, <%=i%>);
				});

				$('stopButton-<%=i%>').click(function(){
					runQuery("stop", <%=i%>);
				});

				$('stopButton-<%=i%>').click(function(){
					runQuery($('#actionSelect-<%=i%>').val());
				});
			<%}%>
		<%}%>

		var actionSelectChange = function(ev, i) {
			hideAll();
			console.log("action change for ", i);
			console.log("event: " + ev.target.value);
			if(ev.target.value == 'stop')
			{}
			else if(ev.target.value == 'allOff')
			{}
			else if(ev.target.value == 'setAll')
			{
				$('#colorSelector1-' + i).show();
				if(paramState[0] == 'setAll')
				{
					$('#r1').val(paramState[1]);
					$('#g1').val(paramState[2]);
					$('#b1').val(paramState[3]);
					$('#r1').trigger('change');
				}
			}
			else if(ev.target.value == 'alternate')
			{
				$('#colorSelector1').show();
				$('#colorSelector2').show();
				if(paramState[0] == 'alternate')
				{
					$('#r1').val(paramState[1]);
					$('#g1').val(paramState[2]);
					$('#b1').val(paramState[3]);
					$('#r2').val(paramState[4]);
					$('#g2').val(paramState[5]);
					$('#b2').val(paramState[6]);
					$('#r1').trigger('change');
					$('#r2').trigger('change');
				}
			}
			else if(ev.target.value == 'loopAlternate')
			{
				$('#colorSelector1').show();
				$('#colorSelector2').show();
				$('#delayDiv').show();
				if(paramState[0] == 'loopAlternate')
				{
					$('#r1').val(paramState[1]);
					$('#g1').val(paramState[2]);
					$('#b1').val(paramState[3]);
					$('#r2').val(paramState[4]);
					$('#g2').val(paramState[5]);
					$('#b2').val(paramState[6]);
					$('#delay').val(paramState[7]);
					$('#r1').trigger('change');
					$('#r2').trigger('change');

				}
			}
			else if(ev.target.value == 'rainbow')
			{
			}
			else if(ev.target.value == 'loopBlocks')
			{
				$('#colorSelector1').show();
				$('#colorSelector2').show();
				$('#delayDiv').show();
				$('#blockSizeDiv').show();
				if(paramState[0] == 'loopBlocks')
				{
					$('#r1').val(paramState[1]);
					$('#g1').val(paramState[2]);
					$('#b1').val(paramState[3]);
					$('#r2').val(paramState[4]);
					$('#g2').val(paramState[5]);
					$('#b2').val(paramState[6]);
					$('#delay').val(paramState[7]);
					$('#blockSize').val(paramState[8]);
					$('#r1').trigger('change');
					$('#r2').trigger('change');
				}
			}
			else if(ev.target.value == 'blocks')
			{
				$('#colorSelector1').show();
				$('#colorSelector2').show();
				$('#blockSizeDiv').show();
				if(paramState[0] == 'blocks')
				{
					$('#r1').val(paramState[1]);
					$('#g1').val(paramState[2]);
					$('#b1').val(paramState[3]);
					$('#r2').val(paramState[4]);
					$('#g2').val(paramState[5]);
					$('#b2').val(paramState[6]);
					$('#blockSize').val(paramState[7]);
					$('#r1').trigger('change');
					$('#r2').trigger('change');
				}
			}
			else if(ev.target.value == 'fadeColor')
			{
				$('#colorSelector1').show();
				$('#colorSelector2').show();
				$('#delayDiv').show();
				$('#durationDiv').show();

				if(paramState[0] == 'fadeColor')
				{
					$('#r1').val(paramState[1]);
					$('#g1').val(paramState[2]);
					$('#b1').val(paramState[3]);
					$('#r2').val(paramState[4]);
					$('#g2').val(paramState[5]);
					$('#b2').val(paramState[6]);
					$('#delay').val(paramState[7]);
					$('#duration').val(paramState[8]);
					$('#r1').trigger('change');
					$('#r2').trigger('change');
				}
			}
			else if(ev.target.value == 'particles')
			{
				$('#numParticlesDiv').show();
				$('#maxVelocityDiv').show();
				$('#threedDiv').show();
				$('#respawnDiv').show();
				$('#flickerDiv').show();
				if(paramState[0] == 'particles')
				{
					$('#numParticles').val(paramState[1]);
					$('#maxVelocity').val(paramState[2]);
					$('#respawn').prop('checked', $.parseJSON(paramState[3]));
					$('#threed').prop('checked', $.parseJSON(paramState[4]));
					$('#flicker').prop('checked', $.parseJSON(paramState[5]));
				}
			}
			else if(ev.target.value == 'endrun')
			{
				$('#colorSelector1').show();
				$('#colorSelector2').show();
				$('#delayDiv').show();

				if(paramState[0] == 'endrun')
				{
					$('#r1').val(paramState[1]);
					$('#g1').val(paramState[2]);
					$('#b1').val(paramState[3]);
					$('#r2').val(paramState[4]);
					$('#g2').val(paramState[5]);
					$('#b2').val(paramState[6]);
					$('#delay').val(paramState[7]);
					$('#r1').trigger('change');
					$('#r2').trigger('change');
				}
			}
			else if(ev.target.value == 'snow')
			{
				$('#colorSelector1').hide();
				$('#colorSelector2').hide();
				$('#delayDiv').hide();
			}
			else if(ev.target.value == 'usa')
			{
				$('#colorSelector1').hide();
				$('#colorSelector2').hide();
				$('#delayDiv').hide();
			}
			else if(ev.target.value == 'lightning')
			{
				$('#colorSelector1').hide();
				$('#colorSelector2').hide();
				$('#delayDiv').hide();
			}
			else if(ev.target.value == 'skull' || ev.target.value == 'skullnolightning')
			{
				$('#colorSelector1').hide();
				$('#colorSelector2').hide();
				$('#delayDiv').hide();
			}
		};
	    
	</script>

</body>
</html>
